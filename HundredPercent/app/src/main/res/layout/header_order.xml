<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/header_order_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/transparent"
            android:text="订单订单订单订单"
            android:textSize="@dimen/order_header_title_size"
            android:singleLine="true"
            android:maxWidth="@dimen/order_header_title_max_width"
            android:ellipsize="end"
            />
        <ImageView
            android:id="@+id/header_image"
            android:layout_width="@dimen/order_header_image_size"
            android:layout_height="@dimen/order_header_image_size"
            android:background="@drawable/favorite_selected"
            android:layout_toRightOf="@id/header_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/order_header_image_margin"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        >
    </RelativeLayout>
</RelativeLayout>