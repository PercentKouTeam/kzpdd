<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        android:id="@+id/header_view"
        >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/header_btn_width"
            android:layout_marginRight="@dimen/header_btn_width"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/personal_title"
            android:textColor="@color/black"
            android:textSize="@dimen/header_title_font_size" />
        <RelativeLayout
            android:id="@+id/notice_rl"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"

            >
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dip"
                android:layout_centerVertical="true"
                android:background="@drawable/person_cricle_red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip"
                />
            <ImageView
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/person_icon_notice"
                android:layout_toLeftOf="@id/count"
                android:layout_marginRight="2dip"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <com.hpercent.snail.app.views.StretchScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_view"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            >
            <RelativeLayout
                android:id="@+id/info_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_info_height"
                android:background="@drawable/adver"
                >

            </RelativeLayout>
            <!-- 我的发布 -->
            <RelativeLayout
                android:id="@+id/publish_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:background="@drawable/selector_comment_btn_white"
                android:layout_below="@id/info_rl"
                android:layout_marginTop="30dip"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="@dimen/more_icon_width"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="@dimen/more_icon_size"
                        android:layout_height="@dimen/more_icon_size"
                        android:background="@drawable/person_icon_publish"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/more_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="@dimen/more_item_text_size"
                    android:gravity="center_vertical|left"
                    android:text="@string/personal_publish_text"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="@dimen/more_arrow_width"
                    android:layout_height="@dimen/more_arrow_height"
                    android:background="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/more_arrow_margin_right"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <!-- 我的收藏 -->
            <RelativeLayout
                android:id="@+id/favorite_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:background="@drawable/selector_comment_btn_white"
                android:layout_below="@id/publish_rl"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="@dimen/more_icon_width"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="@dimen/more_icon_size"
                        android:layout_height="@dimen/more_icon_size"
                        android:background="@drawable/person_icon_favorite"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/more_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="@dimen/more_item_text_size"
                    android:gravity="center_vertical|left"
                    android:text="@string/personal_favorite_text"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="@dimen/more_arrow_width"
                    android:layout_height="@dimen/more_arrow_height"
                    android:background="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/more_arrow_margin_right"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <!-- 我的投诉 -->
            <RelativeLayout
                android:id="@+id/complaint_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:background="@drawable/selector_comment_btn_white"
                android:layout_below="@id/favorite_rl"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="@dimen/more_icon_width"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="@dimen/more_icon_size"
                        android:layout_height="@dimen/more_icon_size"
                        android:background="@drawable/person_icon_complaint"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/more_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="@dimen/more_item_text_size"
                    android:gravity="center_vertical|left"
                    android:text="@string/personal_complaint_text"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="@dimen/more_arrow_width"
                    android:layout_height="@dimen/more_arrow_height"
                    android:background="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/more_arrow_margin_right"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <!-- 我的联系人 -->
            <RelativeLayout
                android:id="@+id/contact_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:background="@drawable/selector_comment_btn_white"
                android:layout_below="@id/complaint_rl"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="@dimen/more_icon_width"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="@dimen/more_icon_size"
                        android:layout_height="@dimen/more_icon_size"
                        android:background="@drawable/person_icon_contact"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/more_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="@dimen/more_item_text_size"
                    android:gravity="center_vertical|left"
                    android:text="@string/personal_contact_text"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="@dimen/more_arrow_width"
                    android:layout_height="@dimen/more_arrow_height"
                    android:background="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/more_arrow_margin_right"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <!-- 退出账号 -->
            <RelativeLayout
                android:id="@+id/logout_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:background="@drawable/selector_comment_btn_white"
                android:layout_below="@id/contact_rl"
                android:layout_marginTop="60dip"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/more_icon_size"
                        android:layout_height="@dimen/more_icon_size"
                        android:background="@drawable/person_icon_logout"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:textSize="@dimen/more_item_text_size"
                        android:gravity="center_vertical"
                        android:text="@string/personal_logout_text"
                        android:textColor="@color/personal_logout_color"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </com.hpercent.snail.app.views.StretchScrollView>
</RelativeLayout>