<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/news_center_item_padding"
    android:paddingRight="@dimen/news_center_item_padding"
    android:paddingTop="@dimen/news_center_item_padding">
    <TextView
        android:id="@+id/title"
        android:layout_marginBottom="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="幸福就是猫吃鱼狗吃肉，创业者的投资与并购"
        android:textSize="@dimen/news_center_item_title_font_size"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:id="@+id/news_brief"
        android:layout_below="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/news_center_item_content_height">
        <RelativeLayout
            android:layout_toLeftOf="@+id/news_img"
            android:layout_width="match_parent"
            android:layout_marginRight="5dip"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/content"
                android:singleLine="false"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/news_center_item_content_font_size"
                android:text="今天是2014年8月20日,星期三,据程序猿老黄历显示,宜使用Eclipse写程序,你看看"
                android:textColor="#4C4C4E"
                android:layout_width="fill_parent"
                android:layout_marginBottom="5dip"
                android:layout_height="60dip" />
            <RelativeLayout
                android:layout_below="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgEnjoy"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/enjoy"/>
                <TextView
                    android:id="@+id/enjoy"
                    android:layout_toRightOf="@+id/imgEnjoy"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/news_center_item_content_font_size"
                    android:layout_marginRight="20dip"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="199"/>
                <ImageView
                    android:id="@+id/imgComment"
                    android:layout_toRightOf="@id/enjoy"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/comment"/>
                <TextView
                    android:id="@+id/comment"
                    android:layout_toRightOf="@+id/imgComment"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="@dimen/news_center_item_content_font_size"
                    android:text="199"/>
                </RelativeLayout>
            </RelativeLayout>
        <ImageView
            android:id="@+id/news_img"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/news_center_item_img_width"
            android:layout_height="@dimen/news_center_item_content_height"
            android:background="@color/red"/>
        </RelativeLayout>
    <ImageView
        android:id="@+id/dottedLine"
        android:layout_below="@+id/news_brief"
        android:layout_width="fill_parent"
        android:background="@drawable/dotted_line"
        android:layout_marginTop="@dimen/news_center_item_padding"
        android:layout_height="1px" />
</RelativeLayout>