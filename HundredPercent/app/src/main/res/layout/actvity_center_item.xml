<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#EDF1F2"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="16dip"
        android:background="#CCCCCC"
        android:layout_width="fill_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="156dip"
        android:background="@color/white">

        <RelativeLayout
            android:layout_toLeftOf="@+id/double_right_arrow"
            android:layout_width="match_parent"
            android:padding="10dip"
            android:layout_height="fill_parent">

            <TextView
                android:layout_above="@+id/middel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="20dip"
                android:layout_marginBottom="10dip"
                android:text="大型励志节目《创赢未来》西南地区海选暨8号平台项目路演"/>
            
            <TextView
                android:id="@+id/middel"
                android:layout_above="@+id/bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:textColor="#949494"
                android:layout_marginBottom="10dip"
                android:text="活动时间：2014.7.20"/>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dip"
                    android:textColor="#949494"
                    android:text="已报名人数：100人"
                    android:gravity="left|center"
                    android:layout_gravity="left"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:textColor="#949494"
                    android:gravity="right|center"
                    android:text="报名人数已满"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/double_right_arrow"
            android:layout_alignParentRight="true"
            android:background="#F6D353"
            android:layout_width="44dip"
            android:gravity="center"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/double_right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:background="#CCCCCC"
        android:layout_width="fill_parent"
        android:layout_height="1px" />
</LinearLayout>