<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/order_item_margin_left"
            android:layout_marginRight="@dimen/order_item_margin_left"
            android:layout_marginTop="@dimen/order_item_margin_top"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/info_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_image_size"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/order_item_image_size"
                        android:layout_height="@dimen/order_item_image_size"
                        android:background="@drawable/default_image"
                        
                        />
                    <RelativeLayout
                        android:layout_toRightOf="@id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/order_item_gap"
                        >
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_item_title_height"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:text="成都睿峰投资管理有限公司"
                            android:textColor="@color/black"
                            android:textSize="@dimen/order_item_title_font_size"
                            />
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_item_text_height"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:layout_below="@id/title"
                            android:text="类型：公司注册"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/order_item_font_size"
                            />
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_item_text_height"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:layout_below="@id/type"
                            android:text="价格：500元"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/order_item_font_size"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_progress_bar_height"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/order_item_gap"
                    >
                    <RelativeLayout
                        android:id="@+id/progress"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@color/order_progress"
                        >
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="20%"
                        android:textSize="14dip"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_button_height"
                    android:orientation="horizontal"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/order_item_gap"
                    >
                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="确认完成"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/order_button_gap"
                        android:background="@drawable/selector_comment_btn_blue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/order_button_text_size"
                        />
                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="取消订单"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/order_button_gap"
                        android:layout_weight="1"
                        android:background="@drawable/selector_comment_btn_gray"
                        android:textColor="@color/white"
                        android:textSize="@dimen/order_button_text_size"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_margin_top"
                    android:background="@color/transparent"
                    >
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>